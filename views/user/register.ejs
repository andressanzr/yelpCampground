<% layout("layouts/boilerplate") %>
    <div class="row">
        <div class="col-6 offset-3 mt-4">
            <h1>Register</h1>
            <%- include("../partials/flash") %>
                <form action="/register" method="post" class="needs-validation mb-3" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="title">Username:</label><input class="form-control" type="text"
                            name="user[username]" id="" required>
                        <div class="valid-feedback">
                            OK!
                        </div>
                        <div class="invalid-feedback">
                            Please insert a username
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="title">Email:</label><input class="form-control" type="email"
                            name="user[email]" id="" required>
                        <div class="valid-feedback">
                            OK!
                        </div>
                        <div class="invalid-feedback">
                            Please insert an email
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="title">Password:</label><input class="form-control"
                            type="password" name="user[password]" id="" required>
                        <div class="valid-feedback">
                            OK!
                        </div>
                        <div class="invalid-feedback">
                            Please insert a password
                        </div>
                    </div>
                    <button class="btn btn-success">Register</button>
                </form>
        </div>

    </div>