<% layout("layouts/boilerplate") %>
    <div class="container justify-content-center align-items-center">
        <div class="row">
            <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3 mt-4">
                <h1>Login</h1>
                <%- include("../partials/flash") %>
                    <form action="/login" method="post" class="needs-validation mb-3" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="title">Username:</label><input class="form-control"
                                type="text" name="username" id="username" autofocus required>
                            <div class="valid-feedback">
                                OK!
                            </div>
                            <div class="invalid-feedback">
                                Please insert a username
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="title">Password:</label><input class="form-control"
                                type="password" name="password" id="password" required>
                            <div class="valid-feedback">
                                OK!
                            </div>
                            <div class="invalid-feedback">
                                Please insert a password
                            </div>
                        </div>
                        <button class="btn w-100 btn-success ">Login</button>
                    </form>
            </div>

        </div>
    </div>